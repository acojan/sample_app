<h1> Creating new <%=@type%> </h1>

<div class="row">
<div class="span6 offset3">
 <%= form_for(@person) do |f| %>
      
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :street %>
      <%= f.text_field :street %>

      <%= f.label :city %>
      <%= f.text_field :city %>

 	    <%= f.label :province %>
      <%= f.text_field :province %>

      <%= f.label :email %>
      <%= f.text_field :email %>
      
      <%= f.label :landline %>
      <%= f.text_field :landline %>

      <%= f.label :mobile %>
      <%= f.text_field :mobile %>

      <hr> 
    	 <%= render :partial => "layouts/individual", :locals => { :f => f }    if @type=='Individual' or @type=='Alumni' %>
       <%= render :partial => "layouts/org", :locals => { :f => f }           if @type=='Organization' %>
       <%= render :partial => "layouts/student", :locals => { :f => f }       if @type=='Student' or @type=='Staff' %>
       <%= render :partial => "layouts/counselee", :locals => { :f => f }     if @type=='Counselee' %>
       <%= render :partial => "layouts/counselor", :locals => { :f => f }     if @type=='Counselor' %>

      <%= f.submit "Confirm", class: "btn btn-large btn-primary" %>
    <% end %>
 </div></div>

